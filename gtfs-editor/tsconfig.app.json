{
  "compilerOptions": {
    "composite": true,

    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",          // React 18 JSX runtime
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}